<Window x:Name="wndConstruct" x:Class="Bamex3000.CertificateConstructor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bamex3000"
        mc:Ignorable="d"
        Title="CertificateConstructor" Height="450" Width="800" MouseDown="WndConstruct_MouseDown" MouseUp="WndConstruct_MouseUp" Foreground="{x:Null}">
    <Grid x:Name="areasGrid" HorizontalAlignment="Left" Margin="0,0,0,0" Width="795" RenderTransformOrigin="0,0" Background="#FFD56060">
        <Image Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" Name="ImageCertificate"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="65" Margin="333,228,0,0" TextWrapping="Wrap" Text="Иванов Иван Иванович" VerticalAlignment="Top" Width="146" Background="#FFD5D0D0" TextAlignment="Center" FontSize="36" FontFamily="Sitka Heading" Visibility="Hidden"/>
        <Button Content="сохранить" Name="save" Margin="0,255,658,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Right" Width="127" Click="save_Click"/>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="0,0,665,108" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" Width="120" Name="fileSettingsName"/>

    </Grid>
</Window>
